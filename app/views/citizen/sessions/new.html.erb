<h2><%= t 'Log in' %></h2>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => "span8"}) do |f| %>
    <div class="inputs span6">
      <div class="input">
        <%= f.label :email %>
        <%= f.email_field :email %>
      </div>

      <div class="input">
        <%= f.label :password %>
        <%= f.password_field :password %>
      </div>

      <% if devise_mapping.rememberable? -%>
          <div class="input checkbox">
            <%= f.check_box :remember_me %> <%= f.label :remember_me, t('remember me') %>
          </div>
      <% end -%>
    </div>
    <div class="actions span8"><%= f.submit t('login') %></div>
<% end %>

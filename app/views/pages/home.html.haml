= render partial: 'headline'
- if session[:ab_section_count] == 1
  = render partial: 'drafts', 
    locals: {title: "Toimenpide- ja Lakiehdotukset sekä Luonnokset", section: "proposal_and_draft",
         items: @proposals_and_drafts, items_counts: @proposal_and_drafts_counts, item_counter: 0 }
- else # session[:ab_section_count] == 2
  .row
    = render partial: 'separator', locals: {title: t('@@@Toimenpide- ja Lakiehdotukse')}
  = render partial: 'ideas_row',
    locals: {items: @proposals, items_counts: @proposals_counts, item_counter: 0, section: "proposal", ideas_rows: 2 }
  .row
    = render partial: 'separator', locals: {title: t("@@@Luonnokset")}
  = render partial: 'ideas_row', 
    locals: {title: t("Luonnokset"), items: @drafts, items_counts: @draft_counts, item_counter: 3,  section: "draft", ideas_rows: 1 }
.row.home_bottom
  .span8
    - if @newest_ideas
      = render partial: 'ideas'
    - else
      - if @ideas.any?
        = render partial: 'random_ideas'
    .row
      .span8
        .pull-right
          = link_to "#{t('ideas list')}»", ideas_path, class: 'list_ideas'
  .span4
    = render partial: 'news'
    = render partial: 'newsletter'

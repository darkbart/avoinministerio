development:
  adapter: sqlite3
  database: db/avoin_ministerio_development.sqlite3
  timeout: 500

# Warning: The database defined as "test" will be erased and
# re-generated from your development database when you run "rake".
# Do not set this db to the same as development or production.
test:
  adapter: sqlite3
  database: ":memory:"
  timeout: 500

production:
  adapter: postgresql
  encoding: unicode
  database: avoin_ministerio_production
  pool: 5

# JS tests running on separate environment
# it needs extra db connection setting
# it must be named 'testjs' (just like additional file in #{Rails.root}/config/environents/)
# and on development machine it should be static sqlite3 database for example:

testjs:
  adapter: sqlite3
  database: db/avoin_ministerio_testjs.sqlite3
  timeout: 500
